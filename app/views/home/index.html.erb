<section>
  <h2 class="title mb-10 text-center"><%= t("views.home.title") %></h2>
  <ul class="grid grid-flow-row gap-5 w-full md:w-3/5 mx-0 md:mx-auto">
    <li>
      <article class="card">
        <h3 class="title-2"><%= t("views.home.sections.budget_periods.title") %></h3>
        <div class="my-5 text-center">
          <%= link_to @budget_period.display_period_full(' '), budget_period_path(@budget_period.uid), class: "link text-xl" %>
          <p class="mt-3 text-2xl number <%= @budget_period.balance.positive? ? 'text-green-600' : @budget_period.balance.zero? ? 'text-slate-500' : 'text-rose-600' %>">
            <%= currency(@budget_period.balance) %>
          </p>
        </div>
      </article>
    </li>
    <li>
      <article class="card">
        <h3 class="title-2"><%= t("views.home.sections.todo_lists.title") %></h3>
        <div class="my-5 text-center">
          <%= link_to @todo_list.name, todo_list_path(@todo_list), class: "link text-xl" %>
          <p class="mt-3 text-2xl text-slate-500"><%= t("views.home.sections.todo_lists.tasks") %>:
            <span class="text-slate-400 number">&nbsp;<%= @todo_list.todo_tasks.count %></span>
          </p>
        </div>
      </article>
    </li>
  </ul>
</section>
