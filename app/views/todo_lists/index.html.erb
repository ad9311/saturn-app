<section>
    <h2 class="title mb-5 text-center">Todo lists</h2>
  <div class="mb-10">
    <%= render "shared/breadcrumb_navigation", breadcrumbs: [{ body: "Home", path: root_path }] %>
  </div>
  <ul class="grid grid-flow-row gap-5 w-full md:w-3/5 mx-0 md:mx-auto">
    <% @todo_lists.each do |list| %>
    <li>
      <article class="card">
        <div class="my-5 text-center">
          <%= link_to list.name, todo_list_path(list), class: "link text-xl" %>
          <p class="mt-3 text-2xl text-lime-600 font-bold">Tasks:
            <span class="text-slate-500 number">&nbsp;<%= list.todo_tasks.count %></span>
          </p>
        </div>
      </article>
    </li>
    <% end %>
  </ul>
</section>
