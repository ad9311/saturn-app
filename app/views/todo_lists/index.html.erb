<section>
    <h2 class="title mb-5 text-center"><%= t("views.todo_lists.plural") %></h2>
  <div class="mb-10">
    <%= render "shared/breadcrumb_navigation", breadcrumbs: [{ body: t("views.todo_lists.breadcrumbs.home"), path: root_path }, { body: t("views.todo_lists.breadcrumbs.todo_lists") }] %>
  </div>
  <div class="my-5 mx-auto w-fit">
    <%= render "shared/link_group", links: todo_list_index_nav_links %>
  </div>
  <ul class="grid grid-flow-row gap-5 w-full md:w-3/5 mx-0 md:mx-auto">
    <% @todo_lists.each do |list| %>
    <li>
      <article class="card">
        <div class="flex justify-end">
          <%= button_to todo_list_path(list), method: :delete, title: t("views.todo_lists.navigation_links.delete"), data: { turbo: false } do %>
            <%= image_tag "bin.svg", alt: "more", class: "w-5" %>
          <% end %>
        </div>
        <div class="my-5 text-center">
          <%= link_to list.name, todo_list_path(list), class: "link text-xl" %>
          <p class="mt-3 text-2xl text-slate-400 font-bold"><%= t("views.todo_lists.tasks") %>:
            <span class="text-slate-500 number">&nbsp;<%= list.todo_tasks.count %></span>
          </p>
        </div>
      </article>
    </li>
    <% end %>
  </ul>
</section>
