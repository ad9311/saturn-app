<div class="card max-w-96 mx-auto md:mx-0">
  <%= render "shared/form_errors", model: @category %>
  <%= form_with model: @category, class: "form" do |f| %>
    <% unless @redirect_path.nil? %>
      <%= hidden_field_tag 'redirect_path', @redirect_path %>
    <% end %>
    <div class="group">
      <%= f.label :name, t("views.expense_categories.forms.name") %>
      <%= f.text_field :name %>
    </div>
    <div class="group">
      <%= f.label :color, t("views.expense_categories.forms.color") %>
      <%= f.color_field :color %>
    </div>
    <div class="submit">
      <% if action_name == 'new' || action_name == 'create' %>
        <%= f.submit t("views.forms.create") %>
      <% end %>

      <% if action_name == 'edit' || action_name == 'update' %>
        <%= f.submit t("views.forms.update") %>
      <% end %>
    </div>
  <% end %>
</div>
