<section>
  <h2 class="title text-center mb-5"><%= @budget_period.display_period_full('/') %></h2>
  <div class="mb-5">
    <%= render "shared/breadcrumb_navigation", breadcrumbs: budget_period_breadcrumb_show(@budget_period) %>
  </div>
  <div class="mt-10 w-fit mx-auto card">
    <div class="p-5">
      <div class="mb-5 text-center">
        <p class="text-slate-400"><%= t("views.budget_periods.balance") %></p>
        <strong class="text-xl number <%= @budget_period.balance.positive? ? 'text-green-500' : 'text-rose-500' %>"><%= number_to_currency(@budget_period.balance) %></strong>
      </div>
      <div class="flex items-center gap-5">
        <div class="text-center">
          <p class="text-slate-400"><%= t("views.transactions.income_short") %></p>
          <p class="text-xl number text-green-500"><%= number_to_currency(@budget_period.total_income) %></p>
        </div>
        <div class="text-center">
          <p class="text-slate-400"><%= t("views.transactions.expense_short") %></p>
          <p class="text-xl number text-rose-500"><%= number_to_currency(@budget_period.total_expenses) %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5 w-fit mx-auto">
    <%= render "shared/link_group", links: budget_period_show_nav_links(@budget_period) %>
  </div>
  <div class="mt-5 mx-auto max-w-xl card flex items-center justify-between">
    <div class="text-center">
      <p class="text-slate-400 text-sm"><%= t("views.budget_periods.transaction_count_full") %></p>
      <strong class="text-lg number text-slate-500"><%= @budget_period.transaction_count %></strong>
    </div>
    <div class="text-center">
      <p class="text-slate-400 text-sm"><%= t("views.budget_periods.income_count_full") %></p>
      <strong class="text-lg number text-slate-500"><%= @budget_period.income_count %></strong>
    </div>
    <div class="text-center">
      <p class="text-slate-400 text-sm"><%= t("views.budget_periods.expense_count_full") %></p>
      <strong class="text-lg number text-slate-500"><%= @budget_period.expense_count %></strong>
    </div>
  </div>
</section>
