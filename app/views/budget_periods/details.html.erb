<section>
  <h2 class="title mb-5 text-center"><%= @budget_period.display_period_full('/') %></h2>
  <div class="mb-5">
    <%= render "shared/breadcrumb_navigation", breadcrumbs: budget_period_breadcrumb_details(@budget_period) %>
  </div>
  <div class="mt-10 w-fit mx-auto card">
    <div class="p-5">
      <div class="mb-5 text-center">
        <p class="text-slate-400">Balance</p>
        <strong class="text-xl number <%= @budget_period.balance.positive? ? 'text-green-500' : 'text-rose-500' %>">
          <%= number_to_currency(@budget_period.balance) %>
        </strong>
      </div>
      <div class="flex items-center gap-5">
        <div class="text-center">
          <p class="text-slate-400">Income</p>
          <strong class="text-xl number text-green-500"><%= number_to_currency(@budget_period.total_income) %></strong>
        </div>
        <div class="text-center">
          <p class="text-slate-400">Expenses</p>
          <strong class="text-xl number text-rose-500"><%= number_to_currency(@budget_period.total_expenses) %></strong>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5 w-fit mx-auto">
    <%= render "shared/link_group", links: budget_period_details_nav_links(@budget_period) %>
  </div>
  <div class="mt-5">
    <%= render "shared/table", table_columns: @income_table_columns, row_data: @row_data_income %>
  </div>
  <div class="mt-5">
    <%= render "shared/table", table_columns: @expense_table_columns, row_data: @row_data_expenses %>
  </div>
</section>
