<span>
  ‚Üê&nbsp;<%= link_to "Budgets", budget_periods_path %>/
  <%= link_to @budget_period.display_period_short(' '), budget_period_path(@budget_period.uid) %>/
  Details
</span>
<h2><%= @budget_period.display_period_full('/') %></h2>
<div class="text-center">
  <span>Balance: <%= @budget_period.balance %></span>
</div>
<div class="overflow-x-auto">
  <%= link_to "New income",  new_budget_income_transaction_path(@budget_period.uid) %>
  <%= render "shared/table/table", table_columns: @income_table_columns, table_rows: @income %>
  <span>Total income: <%= @budget_period.total_income %></span>
</div>
<div class="overflow-x-auto">
  <%= link_to "New expense", root_path %>
  <%= render "shared/table/table", table_columns: @expense_table_columns, table_rows: @expenses %>
  <span>Total expenses: <%= @budget_period.total_expenses %></span>
</div>
