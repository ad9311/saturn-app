<section>
  <h2 class="title mb-5 text-center"><%= t("views.budget_periods.title_full") %></h2>
  <div class="mb-10">
    <%= render "shared/breadcrumb_navigation", breadcrumbs: [{ body: t("views.budget_periods.breadcrumbs.back_to_home"), path: root_path }] %>
  </div>
  <%= turbo_frame_tag "budgets_table" do %>
    <%= render "shared/table", table_columns: @table_columns, render_path: @render_path, rows: @rows %>
    <%= paginate @rows, param_name: :budgets_page %>
  <% end %>
</section>
