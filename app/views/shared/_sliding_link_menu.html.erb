<div class="bg-white border drop-shadow-md rounded-md w-fit absolute z-[100] -left-full transition-all mt-2" data-sliding-menu-target="menu">
  <p class="px-5 pt-14 text-center text-slate-500 font-bold"><%= current_user.full_name %></p>
  <ul class="pt-14 pb-20 px-5 min-w-52">
    <% links.each do |link| %>
      <li class="mb-2 py-1 bg-gray-100 rounded-md text-center">
        <%= link_to link[:label], link[:path], class: "link font-bold" %>
      </li>
    <% end %>
  </ul>
  <div class="pb-8 text-center">
    <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "text-rose-600 hover:underline" %>
  </div>
</div>
