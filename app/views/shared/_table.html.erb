<div class="card overflow-hidden">
  <div class=" overflow-auto max-h-[40rem]">
    <table class="pb-2 table w-full whitespace-nowrap">
      <thead class="bg-white">
        <tr>
          <% table_columns.each do |column| %>
            <th><%= column %></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% rows.each do |row| %>
          <%= render render_path, data: row %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
