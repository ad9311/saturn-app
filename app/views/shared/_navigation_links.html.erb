<div class="px-5 pt-14  flex items-center gap-2 justify-center">
  <p class="text-center text-slate-500 font-bold"><%= current_user.full_name %></p>
  <%= link_to settings_path, title: t('views.shared.navigation_links.settings')  do %>
    <%= image_tag "gear.svg", alt: "settings", class: "w-6" %>
  <% end %>
</div>
<ul class="pt-14 pb-20 px-5 min-w-52">
  <% links.each do |link| %>
    <li class="mb-3 bg-gray-100 rounded-md text-center link font-bold hover:bg-gray-200">
      <%= link_to link[:body], link[:path], class: "py-2 block" %>
    </li>
  <% end %>
</ul>
<div class="pb-8 text-center">
  <%= button_to t("views.shared.navigation_links.sign_out"), destroy_user_session_path, method: :delete, class: "text-rose-600 hover:underline" %>
</div>
