<tr>
  <td title="<%= t("views.todo_categories.table.edit_category") %>" class="text-center">
    <%= link_to edit_todo_list_todo_category_path(data[:todo_list], data[:category]), data: { turbo: false } do %>
      <%= image_tag "pencil.svg", alt: "more", class: "w-5" %>
    <% end %>
  </td>
  <td title="<%= data[:category].name %>"><%= data[:category].name %></td>
  <td title="<%= data[:category].color %>">
    <span class="block w-10 h-4 rounded-md" style="background-color: <%= data[:category].color %>;"></span>
  </td>
  <td title="<%= t("views.todo_categories.table.delete_category") %>">
    <%= button_to todo_list_todo_category_path(data[:todo_list], data[:category]), method: :delete, data: { turbo: false } do %>
      <%= image_tag "bin.svg", alt: "more", class: "w-5" %>
    <% end %>
  </td>
</tr>
